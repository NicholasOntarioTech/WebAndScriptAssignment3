<%-include ../partials/header.ejs %>
<%-include ../partials/main_nav.ejs %>
    <h1><%= title %></h1>
    <p>Now displaying <%= title %> for the Example Venue <br> 
        
        <a href="/Gigs/add" class="btn btn-primary">Add a gig</a> 
    </p> <!--Button to add a new gig-->

    <p></p>
<!--Main content for displaying the gig database-->
<main class="container">
    <br>
    <div class="row">
        <div class="offset-md-1 col-md-9">
            <table class="table table-striped table-hover">
                <!--Header Row, display name of each variable-->
                <tr class="d-flex">
                    <th class="text-center col-2">Performer</th>
                    <th class="text-center col-4">Description</th>
                    <th class="text-center col-2">Show Date</th>
                    <th class="text-center col-1">Show Time</th>
                    <th class="text-center col-1">Show Duration</th>
                    <th class="text-center col-1">Ticket Price</th>
                    <th class="text-center col-2">Edit</th>
                    <th class="text-center col-2">Delete</th>
                </tr>
                <!--for/while loop, creates all the rows of gigs-->
                <% for(let count=0; count<GigList.length;count++) { %>
                    <tr class="d-flex">
                        <td class="text-center col-2"><%= GigList[count].performer %></td>
                        <td class="text-center col-4"><%= GigList[count].description %></td>
                        <td class="text-center col-2"><%= GigList[count].date %></td>
                        <td class="text-center col-1"><%= GigList[count].time %></td>
                        <td class="text-center col-1"><%= GigList[count].duration %> min</td>
                        <td class="text-center col-1">$<%= GigList[count].price %></td>
                        <td class="text-center col-2"><a href="/Gigs/edit/<%=GigList[count]._id%>" class="btn btn-warning">Edit</a></td> <!--Button to edit a singlular gig-->
                        <td class="text-center col-2"><a href="/Gigs/delete/<%=GigList[count]._id%>" class="btn btn-danger" onclick="return confirm('Delete entry for <%= GigList[count].performer %>?')">Delete</a></td>
                        <!--Above, button to delete a singular gig. Notice, the onclick tag: this prompts the user with a confirmation message, making sure they truly wish to delete the entry-->
                        
                    </tr>
                <% } %>
            </table>

        </div>
    </div>
</main>
<%-include ../partials/footer.ejs %>